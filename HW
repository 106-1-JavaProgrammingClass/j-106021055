class Single_Node{
    public int data;
    public Single_Node next = null;

    Single_Node(int data){
        setData(data);
    }


    public void addNode(Single_Node node){
        if (next == null){
            Single_Node temNode = new Single_Node(node.data);
            next = temNode;
            if (node.next != null){
                next.addNode(node.next);
            }
        }else {
            next.addNode(node);
        }
    }

    public int getData() {
        return data;
    }

    public void setData(int data) {
        this.data = data;
    }

    public Single_Node getNext() {
        return next;
    }

    public void showinfo(){
        System.out.println(data);
        if (next != null){
            next.showinfo();
        }
    }

    @Override
    public String toString() {
        return Integer.toString(data);
    }
}
